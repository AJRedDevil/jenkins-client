#header
  position: fixed
  top: 0
  right: 0
  left: 0
  z-index: 2
  transition: left 0.2s

@media (min-width: 768px)
  #header
    left: 200px

.sidedrawer-toggle
  color: #fff
  cursor: pointer
  font-size: 20px
  line-height: 20px
  margin-right: 10px

.sidedrawer-toggle:hover
  color: #fff
  text-decoration: none